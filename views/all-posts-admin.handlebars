
{{#each posts as |post|}}
  <div class="post">
    <div class="post-header">
      <span>
        <a href="/{{post.id}}">
          <h2 class="text-left" id="post-title">{{post.title}}</h2>
        </a>
      </span>
      <span>
      <p class="text-right" id="post-info">Posted by {{post.user_id}} on {{format_date post.date_created}}</p>
      </span>
    </div>
    <div class = "post-body">
      {{post.body}}
    </div>
  </div>

{{/each}}



<div class="text-center bottom">
  <a class="new-button" id="new-post-button">+ New Post</a>
</div>


<script src="/js/post.js"></script>